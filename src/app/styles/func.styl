F-border(size, color=#000, position='')
  $position = position != '' ? '-'+position : ''
  $width = unit(size, px)
  if (size > 0)
    $params = $width solid color
  else
    $params = 0
  border{$position} $params !important

F-t-b(name, color)
	.fw-t-b-{name}
    // border 2px
    F-border(2, color)
    & > thead
      & > tr
        & > th
          F-border(1, color)
        & > td
          F-border(1, color, left)
    & > tbody,
    & > tfoot
      & > tr
        & > th
          F-border(1, color)
        & > td
          F-border(1, color, left)
F-t-b_ed(name, color)
  .fw-t-b_ed-{name}
    & > thead
      & > tr
        F-border(1, color, bottom)
    & > tbody,
    & > tfoot
      & > tr
        F-border(1, color, bottom)
F-t-b_row(name, color)
  .fw-t-b_row-{name}
    @extend .fw-t-b_ed-{name}
    & > tbody,
    & > tfoot
      & > tr
        & > td
          F-border(0, '', left)
F-t-all(name, color)
  .fw-t-all-{name}
    @extend .fw-t
    @extend .fw-t-b-{name}
    @extend .fw-t-b_ed-{name}

F-th-bc(name, color)
  .fw-th-{name}
    & > thead,
    & > tbody,
    & > tfoot
      & > tr > th
        background-color color

F-w(width)
  .fw-w-{width}
    width unit(width, px)


F-mw(width)
  .fw-mw-{width}
    max-width unit(width, px)
    td.addRow
      position relative
      & > button
        position relative
        top 0
        left 0

F-writing-mode(direction='lr')
  $direction = (vertical-)+direction
  .fw-writing-mode-{direction}
    height fit-content
    & > span
      writing-mode $direction

F-lineBar(position, name='black', color=#000)
  .fw-{position}bar-{name}
    F-border(6, color, position)

